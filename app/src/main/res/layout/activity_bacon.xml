<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72231F"
    tools:context="com.neha.hambaster.Bacon">

    <TextView
        android:id="@+id/BaconText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="@string/bacon" />

    <Button
        android:id="@+id/baconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BaconText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="@string/go_to_apples"
        android:onClick="onClick"/>
</RelativeLayout>
